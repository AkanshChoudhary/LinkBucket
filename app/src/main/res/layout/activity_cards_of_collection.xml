<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/statusBarView"
    tools:context=".CollectionActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DF000000">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorMainYellow"
            android:elevation="7dp"
            android:paddingEnd="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="7">

                <ImageView
                    android:id="@+id/backBtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/ic_arrow_back_24" />
                <TextView
                    android:id="@+id/folderNameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/bubblegum_sans"
                    android:padding="7dp"
                    android:text="Title"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    />

                <ImageView
                    android:id="@+id/deselectAllCards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    app:srcCompat="@drawable/ic_uncheck"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/selectAllCards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    app:srcCompat="@drawable/ic_check"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/shareCollectionCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    app:srcCompat="@drawable/ic_share"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/closeOptions"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    app:srcCompat="@drawable/ic_black_cancel"
                    android:visibility="invisible"/>

                <ImageView
                    android:id="@+id/collectionCardSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    app:srcCompat="@drawable/search_black" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/toolbar_background"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:weightSum="7"
                android:id="@+id/collectionCardSearchTab"
               >

                <EditText
                    android:id="@+id/collectionCardSearchBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search..."
                    android:layout_weight="1"
                    android:background="@drawable/toolbar_background"
                    android:focusedByDefault="false"
                    android:gravity="start"
                    android:textColorHint="#DF000000"
                    android:padding="12dp" />

                <ImageView
                    android:id="@+id/cancelCardSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="6"
                    android:padding="7dp"
                    android:src="@drawable/ic_black_cancel" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/collectionCardsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
</LinearLayout>