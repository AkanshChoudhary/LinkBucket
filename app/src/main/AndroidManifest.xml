<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.linkbucket">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NavView">
        <activity android:name=".ReceivedShareCardView"></activity>
        <activity android:name=".ReceivedSharesActivity" />
        <activity android:name=".ShareHistoryScreen" />
        <activity android:name=".CardsOfCollection" />
        <activity android:name=".CollectionActivity" />
        <activity android:name=".UserProfile" />
        <activity android:name=".MainUserDashboard" />
        <activity android:name=".SignUpScreen" />
        <activity android:name=".LoginScreen" />
        <activity android:name=".LoginSignupScreen" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />


    </application>

</manifest>